@model seldin.Models.Apartment
@{
    ViewBag.Title = "ViewApartmentVillageEast";
    Layout = "~/Views/Shared/_Apartment1.cshtml";
}

<section class="intro-carousel wow fadeIn">

    <div class="container-fluid ">

        <div id="intro-carousel-inner" class="carousel slide carousel-fade" data-ride="carousel">

            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/Assets/images/apartment-images/1-1.JPG" alt="Second slide" />
                </div>

                <div class="item">
                    <img src="~/Assets/images/apartment-images/1-2.JPG" alt="Third slide" />
                </div>

                <div class="item">
                    <img src="~/Assets/images/apartment-images/1-3.JPG" alt="Fourth slide" />
                </div>

                <div class="item">
                    <img src="~/Assets/images/apartment-images/1-4.JPG" alt="Fifth slide" />
                </div>

            </div>

            <a class="left carousel-control" href="#intro-carousel-inner" data-slide="prev"><span><i class="fa fa-angle-left"></i></span></a>

            <a class="right carousel-control" href="#intro-carousel-inner" data-slide="next"><span><i class="fa fa-angle-right"></i></span></a>


        </div>

    </div>

</section>
<br>


<center>
    <h1>
        @Model.Name
    </h1>
</center>

<div class="row">
    <div class="col-md-4 text-center padding-md">

    </div>
    <div class="col-md-4 text-center padding-md">

        <p>@Model.Description</p>

    </div>
    <div class="col-md-4 text-center padding-md">

    </div>
</div>



<br><br>



<section class="who-we-are" id="careers">

    <div class="container-fluid padding-fix">

        <div class="row">

            <div class="col-md-6 padding-fix AMENITIES-left"></div>

            <div class="col-md-6 padding-fix AMENITIES-right">

                <div class="who-we-are-content padding-md">

                    <span></span>

                    <h2>Amenities</h2>

                    <div class="row">
                        <div class="col-md-12 text-center padding-md">

                            <h5><i class="fa fa-check"></i> In-Unit Laundry</h5>
                            <h5><i class="fa fa-check"></i> Fully Equipped Kitchens</h5>
                            <h5><i class="fa fa-check"></i> Some Utilities Paid (FSA)</h5>
                            <h5><i class="fa fa-check"></i> Walk-In Closet(s)</h5>
                            <h5><i class="fa fa-check"></i> We Love Pets!</h5>
                            <h5><i class="fa fa-check"></i> Accepts Online Payments</h5>

                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>

</section>

<section class="who-we-are" id="careers">

    <div class="container-fluid padding-fix">

        <div class="row">

            <div class="col-md-6 padding-fix Adress-left">

                <div class="who-we-are-content padding-md">

                    <span></span>

                    <h2><i class="fa fa-map-marker"></i> @Model.Address</h2>

                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-4 text-center padding-md header-social text-center">

                            <h3>
                                <ul class="list-inline">

                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>

                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>

                                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>

                                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>

                                </ul>
                            </h3>


                        </div>
                        <div class="col-md-4"></div>
                    </div>

                </div>

            </div>

            <div class="col-md-6 padding-fix Adress-right"></div>

        </div>

    </div>

</section>
<section class="who-we-are" id="careers">

    <div class="container-fluid padding-fix">

        <div class="row">

            <div class="col-md-6 padding-fix who-we-are-right"></div>

            <div class="col-md-6 padding-fix who-we-are-left">

                <div class="who-we-are-content padding-md">

                    <span></span>

                    <h2>Contact Us</h2>

                    <p>E-mail : @Model.email</p>
                    <p><span><em class="fa fa-phone"></em></span> @Model.telephone</p>
                    <p>
                       @if (Model.OfficeHours != "")
                    {  <span><em class="fa fa-clock-o"></em></span> @Model.OfficeHours }

                    </p>

                </div>

            </div>

        </div>

    </div>

</section>