@*<div class="top-content" style='background-image: url("../../Assets/images/apartment-images/ap-1-cover.JPG")'>*@
<div class="top-content" >
    <div class="container">
        <div class="row">

            <div class="col-sm-8">
                <h1>
                    @ViewBag.Models.Name
                </h1>
                <br />
                <div class="font-quote telephone">
                    <a href="@ViewBag.Models.telephone"><span><em class="fa fa-phone"></em></span>@ViewBag.Models.telephone</a>
                </div>
                <br />
                <h5 class="font-quote font-semi-bold address">
                    @ViewBag.Models.Address
                </h5>
                <br>

                <h1 class="title-text font-semi-bold">
                    <pre class="presst">@ViewBag.Models.Description</pre>
                </h1>
                <br>
            </div>

            <div class="col-sm-4 c-form-1-box wow fadeInUp animated">
                <div class="c-form-1-top">
                    <div class="c-form-1-top-left">
                        <h3>Contact Us</h3>
                    </div>
                    @*<div class="c-form-1-top-right">
                            <i class="fa fa-envelope"></i>
                        </div>*@
                </div>
                <div class="c-form-1-bottom">
                    <form role="form" action="assets/contact.php" method="post">
                        <div class="form-group">
                            <label class="sr-only" for="c-form-1-name">Name</label>
                            <input type="text" name="name" placeholder="Name..." class="c-form-1-name form-control" id="c-form-1-name">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="c-form-1-email">Email</label>
                            <input type="text" name="email" placeholder="Email..." class="c-form-1-email form-control" id="c-form-1-email">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="c-form-1-subject">Subject</label>
                            <input type="text" name="subject" placeholder="Subject..." class="c-form-1-subject form-control" id="c-form-1-subject">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="c-form-1-message">Message</label>
                            <textarea name="message" placeholder="Message..." class="c-form-1-message form-control" id="c-form-1-message"></textarea>
                        </div>
                        <button type="submit" class="btn">Send Message</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
